<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.english.app.gymstartActivity"
    >
    <TextView
        android:id="@+id/message"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CountDown Timer for this Activity"
        />
    <Button
        android:id="@+id/start1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Start"
        android:layout_below="@id/message"
        />
    <Button
        android:id="@+id/pause1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pause"
        android:layout_below="@id/message"
        android:layout_toRightOf="@id/start1"
        />
    <Button
        android:id="@+id/resume1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Resume"
        android:layout_below="@id/message"
        android:layout_toRightOf="@id/pause1"
        />
    <Button
        android:id="@+id/cancel1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:layout_below="@id/message"
        android:layout_toRightOf="@id/resume1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Have A Nice Day !"
        android:id="@+id/niceday1"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/start1" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock4"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/cancel1" />
</RelativeLayout>