<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ywang77buffalo.locationactivity.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="LOCATION OVERVIEW (NORTH CAMPUS)"
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f00"
                android:text="ALFIERO CENTER"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_weight="0.13"
                android:id="@+id/button1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0f0"
                android:text="ALUMINI ARENA"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button2" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#00f"
                android:text="BALDY HALL"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button3" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#ff0"
                android:text="CAPEN HALL/LIBRARY"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button4" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#f0f"
                android:text="CENTER FOR THE ARTS"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button5" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#f90"
                android:text="COMMONS"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button6" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#f00"
                android:text="LOCKWOOD MEMORIAL LIBRARY"
                android:textColor="#ff9"
                android:textSize="20sp"
                android:id="@+id/button7" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#444"
                android:text="MILLARD FILLMORE CENTER"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button8"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#ff002211"
                android:text="NATURAL SCIENCE COMPLEX"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button9"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#f00"
                android:text="NORTON HALL"
                android:textColor="#fff"
                android:textSize="20sp"
                android:id="@+id/button10"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#f0f"
        android:text="O'BRIAN LAW SCHOOL LIBRARY"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/button11"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#0f0"
        android:text="STUDENT UNION"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/button12"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#f90"
        android:text="UB STADIUM"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/button13"/>

        </LinearLayout>

    </ScrollView>
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
