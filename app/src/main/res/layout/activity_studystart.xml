<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".gymstartActivity"
    >
    <TextView
        android:id="@+id/message2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="CountDown Timer for this Activity"
        />
    <Button
        android:id="@+id/start2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Start"
        android:layout_below="@id/message2"
        />
    <Button
        android:id="@+id/pause2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pause"
        android:layout_below="@+id/message2"
        android:layout_toEndOf="@+id/start2" />
    <Button
        android:id="@+id/resume2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Resume"
        android:layout_alignTop="@+id/cancel2"
        android:layout_toEndOf="@+id/pause2" />
    <Button
        android:id="@+id/cancel2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:layout_below="@id/message2"
        android:layout_toRightOf="@id/resume2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Have A Nice Day !"
        android:id="@+id/niceday2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/start1" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock10"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/cancel2" />
</RelativeLayout>