<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ywang77buffalo.locationactivity.aaActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Student Union"
        android:id="@+id/textView36"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="118dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/imageView5"
                android:src="@drawable/su"
                android:layout_above="@+id/textView37"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text= "The Student Union, which opened in the Fall of 1992 serves as the hearthstone of the University. Student Unions provides a variety of services, facilities, and programs that meet the needs of the campus community.The building features a large open lobby with an atrium, information booth, convenience/apparel store, the UB Card Office, reservation rooms, and a conference theater. Mailboxes, ATM machines, lockers, and a daily schedule of events are just a few of the services that are available to the campus community.The Student Unions is the community center for the University conducive to welcoming a diverse population with a high level of customer service."
                android:id="@+id/textView37"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.10" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f00"
                android:text="VIEW AVAILABLE ACTIVITIES"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_weight="1.10"
                android:id="@+id/button25"
                android:layout_marginBottom="60dp"
                android:layout_above="@+id/textClock15"
                android:layout_alignParentStart="true" />


        </LinearLayout>

    </ScrollView>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textClock15" />

</RelativeLayout>
